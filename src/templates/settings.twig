{% import '_includes/forms.twig' as forms %}

{{ forms.textField({
    label: settings.attributeLabels.apiLogin,
    name: 'apiLogin',
    value: settings.apiLogin,
    errors: settings.getErrors('apiLogin'),
}) }}

{{ forms.textField({
    label: settings.attributeLabels.apiPassword,
    name: 'apiPassword',
    value: settings.apiPassword,
    errors: settings.getErrors('apiPassword'),
}) }}

{{ forms.selectField({
    label: settings.attributeLabels.apiCountry,
    name: 'apiCountry',
    value: settings.apiCountry,
    errors: settings.getErrors('apiCountry'),
    options: settings.getCountryOptions(),
}) }}

{#  shipping methods #}
{{forms.editableTableField({
    id: 'enabledShippingMethods',
    name: 'enabledShippingMethods',
    cols: settings.getShippingMethodsColumns(),
    rows: settings.enabledShippingMethods,
    addRowLabel: 'Add the shipping method'|t('search-toolbox'),
    initJs: true,
    label: settings.attributeLabels.enabledShippingMethods,
    errors: settings.getErrors('enabledShippingMethods'),
    allowAdd: true,
    allowDelete: true,
    allowReorder: false,
}) }}

{# default cod type #}
{{ forms.selectField({
    label: settings.attributeLabels.codType,
    instructions: "This setting is only used for the COD type parcels."|t('dpd-easy-ship'),
    name: 'codType',
    options: settings.getCodTypeOptions(),
    value: settings.codType,
    errors: settings.getErrors('codType'),
}) }}

{{ forms.textField({
    label: settings.attributeLabels.parcelShopOptionsUrl,
    instructions: "JSON must contain object 'pudo_locations' with array of location objects, each containing 'PUDOID' and 'PNAME' properties."|t('dpd-easy-ship'),
    name: 'parcelShopOptionsUrl',
    value: settings.parcelShopOptionsUrl,
    errors: settings.getErrors('parcelShopOptionsUrl'),
}) }}

